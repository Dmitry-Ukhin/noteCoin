<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
	<display-name>noteCoin</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>saver</servlet-name>
		<servlet-class>com.noteCoin.controllers.SaveTransaction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>saver</servlet-name>
		<url-pattern>/save_tran</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>display</servlet-name>
		<servlet-class>com.noteCoin.controllers.ShowTransactions</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>display</servlet-name>
		<url-pattern>/show</url-pattern>
	</servlet-mapping>
    <servlet>
        <servlet-name>lastTrans</servlet-name>
        <servlet-class>com.noteCoin.controllers.LastTrans</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>lastTrans</servlet-name>
        <url-pattern>/lastTrans</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>remove</servlet-name>
        <servlet-class>com.noteCoin.controllers.RemoveTransaction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>remove</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>
	<servlet>
		<servlet-name>auth</servlet-name>
		<servlet-class>com.noteCoin.controllers.auth.AuthController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>auth</servlet-name>
		<url-pattern>/auth</url-pattern>
	</servlet-mapping>
</web-app>
